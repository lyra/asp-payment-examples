@model RedirectedFormViewModel
@{
    ViewData["Title"] = "Formulaire par redirection";
}
<div class="px-8 py-12">
    <div class="grid grid-cols-6 md:grid-cols-12 gap-6 items-center">
        <div class="col-span-6">
            <div class="flex flex-col gap-4">
                <h1 class="text-2xl font-bold">Easiest and cheapest online payment integration</h1>
                <p>By integrating a redirected form, cashing in has never been so simple and intuitive. You only need a few details to configure your payment form.</p>
            </div>
        </div>
    </div>
</div>
<div class="mt-4 px-8 py-6">
    <div class="grid grid-cols-6 md:grid-cols-12 gap-4 items-center">
        <div class="col-span-6">
            <h2 class="text-lg font-bold">Payment form</h2>
            <p>Fill out the form to be sent to the payment page associated with your platform. No real transaction will be made and no information is stored on our servers.</p>
        </div>
        <div class="col-span-6">
            <form method="post" action="" class="flex flex-col gap-4 space-y-6">
                <div class="block">
                    <label asp-for="ShopID"></label>
                    <input name="vads_site_id" asp-for="ShopID" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-600 focus:ring focus:ring-blue-600 focus:ring-opacity-50 placeholder-slate-300 font-bold" />
                </div>
            </form>
        </div>
    </div>
</div>